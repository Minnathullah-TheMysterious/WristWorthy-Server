{
    "builds": [
        {
            "src": "./server.js",
            "use": "@vercel/node"
        },
        {
            "src": "build/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "./server.js"
        },
        {
            "src": "/webhook",
            "dest": "./server.js"
        },
        {
            "src": "/create-payment-intent",
            "dest": "./server.js"
        },
        {
            "src": "/",
            "dest": "build/index.html"
        },
        {
            "src": "/(.+)",
            "dest": "build/$1"
        }
    ]
}